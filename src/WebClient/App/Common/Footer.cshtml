@using Lacjam.WebClient
<div class="footer navbar-fixed-bottom pull-right" ng-controller="app.controllers.FooterController as footer">

    @if (HttpContext.Current.IsDebuggingEnabled)
    {
        <ul class="list-inline">
            <li>{{footer.state.url}}</li>
        </ul>
    }

    <footer class="footer">
        <ul class="list-inline">
            <li>&copy; smsf minder 2014</li>
            <li><a href="/#/version">Version @System.Reflection.Assembly.GetAssembly(typeof(BundleConfig)).GetName().Version.ToString()</a></li>
        </ul>
    </footer>

</div>
