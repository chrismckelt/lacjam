<div class="container-fluid" data-ng-controller="app.controllers.MetadataDefinitionGroupEditController as vm" >
    <form class="form-horizontal" role="form">
        <h2 class="sectionHeader">
            {{title}}
        </h2>
        <input type="hidden" ng-model="vm.model.identity">
        <div class="form-group">
            <label class="col-sm-2 control-label">Name</label>
            <div class="col-sm-8">
                <input type="text" ng-model="vm.model.name" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Definitions</label>
            <div class="col-sm-8" ui-if="vm.model">
                <input ui-select2="vm.definitionsSelect2" ng-model="vm.model.definitions" style="width:500px"/>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Description</label>
            <div class="col-sm-8">
                <textarea ng-model="vm.model.description" class="form-control"></textarea>
            </div>
        </div>

        <div class="form-group button-row">
            <div class="col-sm-offset-2 col-sm-10 ">
                <button type="button" ng-click="vm.save()" class="btn btn-warning">Save</button>
                <button type="button" ng-click="vm.doDelete()" class="btn btn-warning" ng-show="vm.editMode">Delete</button>
                <a href="#/metadatadefinitiongroups" ng-click="cancel" class="cancel-link">Cancel</a>
            </div>
        </div>

    </form>
</div>
<!-- /.container-fluid -->