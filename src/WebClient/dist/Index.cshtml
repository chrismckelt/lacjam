@using Lacjam.WebClient
@{
    Layout = null;
}

<!doctype html>
<html>
  <head>
	<meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <title>-- SMSF Minder --</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no" />

	<meta name="description" content="smsf minder">
    <meta name="keywords" content="smsf minder">
    <meta name="author" content="http://cherrybytesoftware.com/">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" type="text/css" href="jspm_packages/github/twbs/bootstrap@3.3.2/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="jspm_packages/npm/font-awesome@4.2.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="styles/styles.css">
  </head>
  <body aurelia-app>
    <div class="splash">
      <div class="message">SMSF Minder</div>
      <i class="fa fa-spinner fa-spin"></i>
    </div>
	<!-- Wrapper start-->
    <div id="wrapper">

        <!-- Navigation -->
        <import from='"'./app/common/navigation.cshtml'" /></import>

        <div id="page-wrapper" class="gray-bg {{$state.current.name}}">

            <!-- Page wrapper -->
            <div ng-include="'app/common/navigationtop.cshtml'"></div>

            <!-- Main view  -->
            <div ui-view></div>

            <!-- Footer -->
            <div ng-include="'app/common/footer.cshtml'"></div>

        </div>

    </div>
    <!-- Wrapper end-->
 
    <div>
        <span id="spinner" data-cc-spinner="{radius:30, width:3, length: 10, radius: 9, corners: 1, rotate: 29, speed: 1}" spinner-key="spinner" style="position: absolute; display: block; top: 50%; left: 50%;"></span>
    </div>
    <script src="jspm_packages/system.js"></script>
    <script src="config.js"></script>
    <script>
      System.baseUrl = '/app/'; //NOTE: You can move this into the config.js file, if you like.
      System.import('aurelia-bootstrapper').catch(console.error.bind(console));
    </script>
  </body>
</html>



